<div class="img w-full h-[75vh] relative" style = "text-shadow: 1px 1px black">
    <%backdrop_path = "https://image.tmdb.org/t/p/w200#{@found_movie["backdrop_path"]}"%>
    <%poster_path = "https://image.tmdb.org/t/p/w200#{@found_movie["poster_path"]}"%>
          <img
            src="<%=backdrop_path%>"
            alt="movie backdrop"
            class="w-full h-full blur-md opacity-70"
          />
          <div class="absolute w-full px-16 bottom-16 md:flex flex-col md:max-h-[400px] md:flex-row">
            <img
              class="mx-auto w-4/5 h-4/5 md:h-full md:w-full max-h-[400px] max-w-[265px] md:mx-0"
              src="<%=poster_path%>"
              alt="<%@found_movie["original_title"]%>"
            />
            <div class="description pl-16 hidden md:inline">
              <a
                href={movie_detail.homepage}
                target="_blank"
                rel="noreferrer"
                class="text-4xl xl:text-7xl mb-8 text-[#fff] font-semibold font-[Poppins]"
              >
                <%=@found_movie["original_title"]%>
              </a>
              <br />
              <br />
              <p class="text-[#fff] text-sm lg:text-lg w-4/5">
                <%=@found_movie["overview"]%>
              </p>
              <table class="w-1/2 text-[#fff] text-left mt-4">
                <thead></thead>
                <tbody>
                  <tr>
                    <th>Vote Count</th>
                    <td><%=@found_movie["vote_count"]%></td>
                  </tr>
                  <tr class="mt-4">
                    <th>Vote Rating</th>
                    <td><%=@found_movie["vote_count"]%></td>
                  </tr>
                  <tr class="mt-4">
                    <th>Status</th>
                    <td><%=@found_movie["status"]%></td>
                  </tr>
                  <tr class="mt-4">
                    <th>Runtime</th>
                    <td><%=@found_movie["runtime"]%> mins</td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="buttons flex flex-col justify-center items-center min-w-max">
              <a
                href={movie_detail.homepage}
                class="p-4 text-center text-[#fff] border-2 border-[#fff] m-2 w-full rounded-lg"
              >
                Watch Trailer
              </a>
              <a
                href={movie_detail.homepage}
                class="p-4 text-center text-[#fff] border-2 border-[#fff] m-2 w-full rounded-lg"
              >
                Watch Movie Now
              </a>
    </div>
  </div>
</div>
<div class="review w-full h-[75vh] my-16">
  <div class="text-6xl text-red-700 font-semibold">Reviews</div>
  <div class="comments">
    <% if @comments.any?%>
    <a href="#comment">Add a comment</a> <br>
      <% @comments.each do |comment|%>
        <div class="w-full py-4 border-solid border-b border-black">
      <div class="commentor flex h-[30px] md:h-[50px] ">
          <div class="w-[30px] h-[30px] md:w-[50px] md:h-[50px] bg-green-700 text-lg md:text-2xl font-bold text-black rounded-full mr-2 md:mr-4 flex justify-center items-center">
            <%=comment.user["user_name"][0]%>
          </div>
        <div class="author h-full flex items-center font-semibold justify-center">
        <%=comment.user["user_name"]%>
        </div>
      </div>
      <div
        id="comment"
        class="comment text-sm max-h-[150px] overflow-y-auto"
      ><%= comment["comment"]%></div>
    </div>
      <%end%>
    <%else%>
      <div>No Comments found! <a href="#comment">Be the first one to comment</a></div>
    <%end%>
    <div>
      <%= form_with model: @review, url: reviews_path(@review), method: "post" do |form| %>
        <%= form.label :comment%>
        <%= form.text_area :comment %>
        <%= form.label :rating%>
        <%= form.text_field :rating %>
        <%= form.submit "Submit" %>
        <%= form.hidden_field :movie_id, value: @found_movie["id"] %>
        <%= form.hidden_field :user_id, value: '1' %>
      <% end %>
    </div>
  </div>
</div>