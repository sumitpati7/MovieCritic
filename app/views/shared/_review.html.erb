<%= turbo_frame_tag "review_#{review.id}" do%>
<div class="w-full py-4 border-solid border-b border-[#d9dbe9] group">
<div class="commentor flex justify-between h-[30px] md:h-[50px] ">
    <div class="flex items-center">
        <div class="w-[30px] h-[30px] md:w-[50px] md:h-[50px] bg-green-700 text-lg md:text-2xl font-bold text-black rounded-full mr-2 md:mr-4 flex justify-center items-center">
            <%=review.user["user_name"][0]%>
        </div>
        <div class="author h-full flex items-center font-semibold justify-center">
            <%=review.user["user_name"]%>
        </div>
    </div>
    <div class="delete flex items-center">
        <%= button_to "Delete",
                    review_path(review),
                    method: :delete,
                    class: "hidden text-[#a6a8b6] group-hover:block" %>
    </div>
</div>
    <div
        id="comment"
        class="comment text-sm max-h-[150px] overflow-y-auto"
        ><%= review["comment"]%>
    </div>
</div>
<%end%>